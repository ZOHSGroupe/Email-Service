openapi: 3.0.0
info:
  title: email service
  version: 1.0.0
servers:
  - url: "http://127.0.0.1:5000"
paths:
  /email/sentverificationcode:
    post:
      summary: Send code verification
      requestBody:
        required: true
        content:
          application/json:
            example:
              username: "Ouail Laamiri"
              email: "laamiri.ouail@etu.uae.ac.ma"
      responses:
        '200':
          description: Successful operation
